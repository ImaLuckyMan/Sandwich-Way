@model ShoppingCartViewModel

<h2>Shopping Cart: All the sandwiches you love</h2>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Selected Amount</th>
            <th>Sandwiches</th>
            <th class="text-right">Price</th>
            <th class="text-right">Subtotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ShoppingCart.ShoppingCartItems)
        {
            <tr>
                <td class="text-center">@item.Amount</td>
                <td class="text-left">@item.Sandwiches.SandwichName</td>
                <td class="text-right">@item.Sandwiches.Price.ToString("c")</td>
                <td class="text-right">
                    @(item.Amount * item.Sandwiches.Price).ToString("c"))
                </td>
            </tr>

         }

    </tbody>

    <tfoot>
        <tb colspan="3" class="text-right">Total</tb>
        <tb class="text-right">@Model.ShoppingCartTotal.ToString("c")</tb>
    </tfoot>

</table>



<div class="text-center">
    <a class="btn btn-primary" asp-controller="Order" asp-action="Checkout">Checkout</a>    
</div>